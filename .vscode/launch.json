    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "purpose": [
                "debug-in-terminal"
            ],
            "console": "integratedTerminal",
            "args": [
                "..\\test_data\\data_20250326\\ResultManagement.json",
                "..\\test_data\\data_20250326\\Trace.json",
                ".\\mqtt_conf.yaml",
                "--log-level",
                "DEBUG"
            ]
        },
        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            }
        }
    ]
}