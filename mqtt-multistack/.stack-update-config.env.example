# Portainer Stack Updater Configuration
# Copy this file to .stack-update-config.env and update with your values

# Portainer Configuration
# Note: Use https:// if Portainer has SSL enabled (port 9443)
# Use http:// for non-SSL installations (port 9000)
# The script uses curl -k to bypass SSL certificate verification for self-signed certs
PORTAINER_URL="http://localhost:9000"
# PORTAINER_URL="https://localhost:9443"  # For SSL-enabled Portainer
PORTAINER_USER="admin"
PORTAINER_PASS="your-password-here"

# Update Behavior
DRY_RUN=false                    # Set to true to test without making changes
AUTO_CONFIRM=false               # Set to true to skip confirmation prompts
ENABLE_NOTIFICATIONS=false       # Set to true to enable notifications

# File Paths
STATE_FILE=".stack-update-state.json"    # State tracking file
LOG_FILE="stack-updater.log"             # Log file location

# Notification Settings (if enabled)
# WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# NOTIFY_EMAIL="admin@example.com"

# Advanced Settings
# CHECK_INTERVAL=300              # Seconds between checks (for cron usage)
# MAX_RETRIES=3                   # Maximum retry attempts for failed operations
# RETRY_DELAY=30                  # Seconds between retries
# HEALTH_CHECK_TIMEOUT=60         # Seconds to wait for health check
# ENABLE_ROLLBACK=true            # Enable automatic rollback on failure

# Docker Build Settings
# DOCKER_BUILD_NO_CACHE=false     # Force rebuild without cache
# DOCKER_BUILD_QUIET=false        # Suppress build output

# Stack-specific Settings (optional overrides)
# STACK_mqtt_broker_ENABLED=true
# STACK_uos_depthest_listener_cpu_ENABLED=true
# STACK_uos_publisher_json_ENABLED=true